---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { modeGlobal } from '../components/svelte/store.js';
import BpmSettings from '../components/svelte/BpmSettings.svelte';
import BpmInput from '../components/svelte/BpmInput.svelte';
import ModeReference from '../components/svelte/ModeReference.svelte';
import DelayCalc from '../components/svelte/DelayCalc.svelte';
import LfoHertz from '../components/svelte/LfoHertz.svelte';
import SubBassComp from '../components/svelte/SubBassComp.svelte';
import NoteFreqs from '../components/svelte/NoteFreqs.svelte';
import MsSampleConvert from '../components/svelte/MsSampleConvert.svelte';
import ToDo from '../components/svelte/ToDo.svelte';
---

<!doctype html>
<html lang="en">
	<head>
		<!--
		<script async src="https://us.umami.is/script.js" data-website-id="65e7053a-c193-407d-9edf-252602027eb6"></script>
		 -->
		<BaseHead title='BPM Tools' description={SITE_DESCRIPTION} />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
		<link rel="manifest" href="/favicons/site.webmanifest">
		<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">
	</head>
	<body class="web">
		<Header title={SITE_TITLE} />
		<BpmInput client:only="svelte" />
		<BpmSettings client:only="svelte"/>
		<main>
			<div class="main-container">
			<section class="all-modules">
				<details>
					<summary>
						<h2>Mode / scale reference (WIP)</h2>
					</summary>
					<ModeReference client:only="svelte"/>
					<a href="https://en.wikipedia.org/wiki/Mode_(music)">Modes</a> | <a href="https://en.wikipedia.org/wiki/Chord_(music)">Chords</a> | <a href="https://en.wikipedia.org/wiki/Circle_of_fifths">Circle of fifths</a>
				</details>
				<details>
					<summary>
						<h2>
							Delay / pre-delay calculator
						</h2>
					</summary>
					<DelayCalc client:only="svelte"/>
				</details>
				<details>
					<summary>
						<h2>
							LFO / Hertz calculator
						</h2>
					</summary>
					<LfoHertz client:only="svelte"/>
				</details>
				<details>
					<summary>
						<h2>
							Sub-bass compression attack minimums
						</h2>
					</summary>
					<SubBassComp />
				</details>
				<details>
					<summary>
						<h2>
							Musical note frequencies
						</h2>
					</summary>
					<NoteFreqs />
				</details>
			<details>
				<summary>
					<h2>
						To Do
					</h2>
					<hgroup>
						Updates that need to be made. Short term roadmap.
					</hgroup>
				</summary>
				<ToDo />
			</details>
			<details>
				<summary>
					<h2>Millisecond --> Samples (WIP)</h2>
				</summary>
				<MsSampleConvert client:only="svelte"/>
			</details>
			</section>
		</div>
		</main>
		<Footer />
		
	</body>
</html>
